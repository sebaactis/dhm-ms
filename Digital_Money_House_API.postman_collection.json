					"name": "12. Filter Activity by Type",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/accounts/{{accountId}}/activity?type=DEPOSIT",
							"host": ["{{baseUrl}}"],
							"path": ["api", "accounts", "{{accountId}}", "activity"],
							"query": [
								{
									"key": "type",
									"value": "DEPOSIT",
									"description": "DEPOSIT, WITHDRAWAL, TRANSFER_IN, TRANSFER_OUT"
								}
							]
						},
						"description": "Filtra actividad por tipo de transacción"
					},
					"response": []
				},
				{
					"name": "13. Filter Activity by Amount Range",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/accounts/{{accountId}}/activity?amountRange=RANGE_1000_5000",
							"host": ["{{baseUrl}}"],
							"path": ["api", "accounts", "{{accountId}}", "activity"],
							"query": [
								{
									"key": "amountRange",
									"value": "RANGE_1000_5000",
									"description": "RANGE_0_1000, RANGE_1000_5000, RANGE_5000_20000, RANGE_20000_100000, RANGE_OVER_100000"
								}
							]
						},
						"description": "Filtra actividad por rango de monto"
					},
					"response": []
				},
