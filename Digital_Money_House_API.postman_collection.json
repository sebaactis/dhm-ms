						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/accounts/{{accountId}}/activity?dateFrom=2026-01-01&dateTo=2026-01-31",
							"host": ["{{baseUrl}}"],
							"path": ["api", "accounts", "{{accountId}}", "activity"],
							"query": [
								{
									"key": "dateFrom",
									"value": "2026-01-01",
									"description": "Fecha desde (yyyy-MM-dd)"
