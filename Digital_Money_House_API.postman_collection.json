			"name": "User Service",
			"item": [
				{
					"name": "1. Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('userId', response.id);",
									"    console.log('✅ User registered: ID=' + response.id);",
									"    console.log('✅ CVU: ' + response.cvu);",
									"    console.log('✅ Alias: ' + response.alias);",
									"} else {",
									"    console.log('❌ Register failed: ' + pm.response.status);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"firstName\": \"Juan\",\n  \"lastName\": \"Pérez\",\n  \"dni\": \"12345678\",\n  \"email\": \"juan.perez@example.com\",\n  \"phone\": \"+541112345678\",\n  \"password\": \"MiPassword123!\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/users/register",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users", "register"]
						},
						"description": "Registra un nuevo usuario en el sistema y crea automáticamente su cuenta"
					},
					"response": []
				},
				{
					"name": "2. Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('token', response.token);",
									"    pm.collectionVariables.set('userId', response.userId);",
									"    console.log('✅ Login successful. Token saved.');",
									"    console.log('✅ User ID: ' + response.userId);",
									"} else {",
									"    console.log('❌ Login failed: ' + pm.response.status);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"juan.perez@example.com\",\n  \"password\": \"MiPassword123!\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/users/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users", "login"]
						},
						"description": "Autentica un usuario y retorna un JWT token"
					},
					"response": []
				},
				{
					"name": "3. Get User by ID",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    console.log('✅ User retrieved successfully');",
									"    console.log('Name: ' + response.firstName + ' ' + response.lastName);",
									"} else {",
									"    console.log('❌ Get User failed: ' + pm.response.status);",
									"}"
								],
								"type": "text/javascript"
							}
						}
